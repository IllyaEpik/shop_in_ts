generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  // engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model Purchase {
    id                  Int      @id @default(autoincrement())
    userId              Int
    purchaseDate        DateTime @default(now()) 
    grandTotal          Float 
    overallStatus       String   
    shippingAddress     String 
    items               PurchasedItem[] 
    paymentMethod       String
}
model PurchasedItem {
    id                      Int      @id @default(autoincrement())
    purchaseId              Int
    purchase                Purchase @relation(fields: [purchaseId], references: [id])
    productId               Int
    productName             String
    unitPrice               Float 
    quantity                Int
    maxPurchaseQuantity     Int?
    totalPrice              Float
    deliveryStatus          String   @default("PENDING_SHIPMENT")
    estimatedDeliveryDate   DateTime?
}
model Parameter {
  id          Int     @id @default(autoincrement())
  title       String
  bigText     String
  description String

  
  products    Product[]
}

model Block {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  demo        String?   
  product     Product?  @relation(fields: [productId], references: [id])
  productId   Int?
}



model Product {
	  id                Int @default(autoincrement()) @id
    price             Int
    discount          Int
    description       String
    name              String
    quantityLimit     Int
    parameterId     Int?
    parameter       Parameter? @relation(fields: [parameterId], references: [id])

  blocks          Block[]

}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String?
  lastName   String?
  fatherName String?
  cardNumber String?
  phoneNumber String?
  addresses  Address[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
model Address {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  country    String?
  city       String?
  street     String?
  house      String?
}