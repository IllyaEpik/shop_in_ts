generator client {
	provider = "prisma-client-ts"
	output   = "../src/generated/prisma"
	// engineType = "client"
}

datasource db {
  	provider = "sqlite"
}

model Parameter {
	id          Int     @id @default(autoincrement())
	title       String
	bigText     String
	description String
	
    product       Product @relation(fields: [productId], references: [id])
    productId     Int
}

model Block {
	id          Int       @id @default(autoincrement())
	title       String
	description String
	demo        String?
	product     Product  @relation(fields: [productId], references: [id])
	productId   Int
}

enum DeliveryStatus {
	COMPLETED
	COLLECTED
	IN_TRANSIT
	DELIVERED
	RECIVED
	CANCELLED
}

model Order {
	id             Int            @id @default(autoincrement())
	deliveryStatus DeliveryStatus @default(COLLECTED)

	createdAt      DateTime       @default(now())

	items          OrderItem[]
}

model OrderItem {
  id                  Int     @id @default(autoincrement())
  orderId             Int
  productId           Int
  quantity            Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}



model Product {
	id                Int @default(autoincrement()) @id
    price             Int
    discount          Int
    description       String
    name              String
    quantityLimit     Int
	parametrs         Parameter[]
  	blocks            Block[]
	categoryId        Int
	category 		  Category @relation(fields: [categoryId], references: [id])
	orderItems        OrderItem[] 
	userId            Int      
	popular           Int      @default(0)
	createdAt         DateTime @default(now())
	
}

model User {
	id         Int       @id @default(autoincrement())
	email      String    @unique
	password   String
	name       String?
	lastName   String?
	fatherName String?
	cardNumber String?
	phoneNumber String?
	addresses  Address[]
	createdAt  DateTime  @default(now())
	updatedAt  DateTime  @updatedAt
}

model Address {
	id         Int    @id @default(autoincrement())
	user       User   @relation(fields: [userId], references: [id])
	userId     Int
	country    String?
	city       String?
	street     String?
	house      String?
}
model Category{
	id Int @id @default(autoincrement()) 
	urlName String @unique
	name String
	products  Product[]
}
