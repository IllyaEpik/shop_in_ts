generator client {
	provider = "prisma-client-ts"
	output   = "../src/generated/prisma"
	// engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model Parameter {
	id          Int     @id @default(autoincrement())
	title       String
	bigText     String
	description String

	
    product       Product @relation(fields: [productId], references: [id])
    productId     Int
}

model Block {
	id          Int       @id @default(autoincrement())
	title       String
	description String
	demo        String?
	product     Product  @relation(fields: [productId], references: [id])
	productId   Int
}



model Product {
	id                Int @default(autoincrement()) @id
    price             Int
    discount          Int
    description       String
    name              String
    quantityLimit     Int
	parametrs         Parameter[]
  	blocks            Block[]
}

model User {
	id         Int       @id @default(autoincrement())
	email      String    @unique
	password   String
	name       String?
	lastName   String?
	fatherName String?
	cardNumber String?
	phoneNumber String?
	addresses  Address[]
	createdAt  DateTime  @default(now())
	updatedAt  DateTime  @updatedAt
}

model Address {
	id         Int    @id @default(autoincrement())
	user       User   @relation(fields: [userId], references: [id])
	userId     Int
	country    String?
	city       String?
	street     String?
	house      String?
}