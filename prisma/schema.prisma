generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Purchase {
    id                  Int      @id @default(autoincrement())
    userId              Int
    purchaseDate        DateTime @default(now()) 
    grandTotal          Float 
    overallStatus       String   
    shippingAddress     String 
    items               PurchasedItem[] 
    paymentMethod       String
}
model PurchasedItem {
    id                      Int      @id @default(autoincrement())
    purchaseId              Int
    purchase                Purchase @relation(fields: [purchaseId], references: [id])
    productId               Int
    productName             String
    unitPrice               Float 
    quantity                Int
    maxPurchaseQuantity     Int?
    totalPrice              Float
    deliveryStatus          String   @default("PENDING_SHIPMENT")
    estimatedDeliveryDate   DateTime?
}
model Product {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  price         Int
  discount      Int
  quantityLimit Int

  blocks        Block[]
  images        Image[]

  createdAt     DateTime @default(now())
}

model Block {
  id        Int      @id @default(autoincrement())
  title     String
  description String
  demo      String?

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  parameters Parameter[]
}

model Parameter {
  id      Int    @id @default(autoincrement())
  key     String
  value   String

  blockId Int
  block   Block @relation(fields: [blockId], references: [id])
}

model Image {
  id        Int    @id @default(autoincrement())
  url       String

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}







model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String?
  lastName   String?
  fatherName String?
  cardNumber String?
  phoneNumber String?
  addresses  Address[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
model Address {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  country    String?
  city       String?
  street     String?
  house      String?
}