generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Purchase {
    id                  Int      @id @default(autoincrement())
    userId              Int
    purchaseDate        DateTime @default(now()) 
    grandTotal          Float 
    overallStatus       String   
    shippingAddress     String 
    items               PurchasedItem[] 
    paymentMethod       String
}
model PurchasedItem {
    id                      Int      @id @default(autoincrement())
    purchaseId              Int
    purchase                Purchase @relation(fields: [purchaseId], references: [id])
    productId               Int
    productName             String
    unitPrice               Float 
    quantity                Int
    maxPurchaseQuantity     Int?
    totalPrice              Float
    deliveryStatus          String   @default("PENDING_SHIPMENT")
    estimatedDeliveryDate   DateTime?
}

model Product {
	id                Int @default(autoincrement()) @id
    price             Int
    discount          Int
    description       String
    name              String
    quantityLimit     Int
}

model User {
    id              Int @default(autoincrement()) @id
    
}